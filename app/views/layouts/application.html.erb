<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sidebar">
	<div id="logo">
		<%= link_to root_path do %>
		<%= image_tag("logo.svg", size: "50") %>
		<% end %>
	</div>
	<ul>
		<li class="category">Website</li>
		<li><%= link_to "Blog", root_path %></li>
		<li><%= link_to "About", about_path %></li>
	</ul>
	<ul>
		<li class="category">Social</li>
		<li><a href="https://www.facebook.com/mkaliniewicz">Facebook</a></li>
		<li><a href="https://github.com/Mi00">GitHub</a></li>
		<li><a href="https://pl.linkedin.com/in/michaÅ‚-kaliniewicz-b75a557a">Linked In</a></li>
		<li><a href="mailto:muturuzi@gmail.com">Email</a></li>
	</ul>
	<% if !user_signed_in? %>
	<p class="sign_in">Admin Login</p>
	<% end %>
</div>

<div id="main_content">
	<div id="header">
		<% if current_page?(root_path) %>
			<p>All Posts</p>
		<% elsif current_page?(about_path) %>
			<p>About</p>
		<% else %>
			<%= link_to "Back to All posts", root_path %>
		<% end %>

		
		<div class="buttons">
			<% if user_signed_in? %>
				<%= link_to new_post_path do %>
					<button class="button">New Post</button>
				<% end %>
				<%= link_to edit_user_registration_path do %>
					<button class="button">Edit account</button>
				<% end %>
				<%= link_to destroy_user_session_path, :method => :delete do %>
					<button class="button">Log Out</button>
				<% end %>
			<% else %>
				<%= link_to new_user_session_path do %>
					<button class="button">Login</button>
				<% end %>
				<%= link_to new_user_registration_path do %>
					<button class="button">Sign Up</button>
				<% end %>
			<% end %>
			
		</div>
		
	</div>

	<% flash.each do |name, msg| %>
		<%= content_tag(:div, msg, class: "alert") %>
	<% end %>
<%= yield %>
</div>
</body>
</body>

</body>
</html>
